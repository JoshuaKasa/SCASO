{
  "name": "SCASO Patcher",
  "version": "1.1.0",
  "manifest_version": 3,
  "description": "SCASO Songsterr Patcher",
  "permissions": ["storage"],
  "host_permissions": ["*://*.songsterr.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.songsterr.com/*"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["*://*.songsterr.com/*"]
    }
  ],
  "action": {
    "default_title": "SCASO"
  }
}
